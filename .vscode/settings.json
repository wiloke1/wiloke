{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll": true
  },
  "scss.scannerExclude": [
    "**/.git"
  ],
  "eslint.workingDirectories": [
    "src"
  ],
  "typescript.tsdk": "node_modules\\typescript\\lib"
}
